<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
    <title>Edit Blog</title>
</head>

<body>
    <%- include('./partials/navbar') %>

    <div class="container mt-4">
        <h1>Edit Blog Post</h1>

        <% if (typeof err !== 'undefined' && err) { %>
            <div class="alert alert-danger" role="alert">
                <%= err %>
            </div>
        <% } %>

        <form action="/blog/<%= blog._id %>/edit" method="POST" enctype="multipart/form-data">

            <!-- Title -->
            <div class="form-floating mb-3">
                <input 
                    type="text" 
                    name="title"
                    class="form-control" 
                    id="titleInput" 
                    placeholder="Blog Title"
                    value="<%= blog.title %>"
                    required>
                <label for="titleInput">Blog Title</label>
            </div>

            <!-- Current Cover Image -->
            <div class="mb-3">
                <label class="form-label">Current Cover Image</label>
                <div>
                    <img src="<%= blog.coverImage %>" alt="Current cover" class="img-thumbnail" style="max-width: 300px;">
                </div>
            </div>

            <!-- New Cover Image (Optional) -->
            <div class="form-floating mb-3">
                <input 
                    type="file" 
                    name="coverImage"
                    class="form-control" 
                    id="coverImageInput">
                <label for="coverImageInput">Change Cover Image (optional)</label>
            </div>

            <!-- Content -->
            <div class="mb-3">
                <label for="contentTextarea" class="form-label">Blog Content</label>
                <textarea 
                    name="content"
                    id="contentTextarea"
                    class="form-control"
                    placeholder="Blog Content"
                    rows="10"
                    required><%= blog.content %></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Update Blog</button>
            <a href="/blog/<%= blog._id %>" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

    <%- include('./partials/script') %>
</body>
</html>

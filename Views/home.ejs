<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
        <title>Document</title>
</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">

        <h1 class="mb-4">Latest Blogs</h1>

        <div class="row g-4">
            <% blogs.forEach(blog=> { %>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div style="height: 200px; overflow: hidden; background-color: #f8f9fa;">
                            <img src="<%= blog.coverImage %>" class="card-img-top w-100 h-100" alt="<%= blog.title %>" style="object-fit: cover; object-position: center;">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>

                            <p class="card-text text-muted">
                                <%= blog.content.substring(0, 100) %>...
                            </p>

                            <div class="mt-auto">
                                <small class="text-muted">By <%= blog.createdBy ? blog.createdBy.fullname : 'Unknown' %></small>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm float-end">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

                <!-- <%= JSON.stringify(blogs) %> -->

                    <%- include('./partials/script') %>
</body>

</html>